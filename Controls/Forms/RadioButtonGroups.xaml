<Window
    x:Class="Controls.Forms.RadioButtonGroups"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Controls.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RadioButtonGroups"
    Width="300"
    Height="300"
    mc:Ignorable="d">

    <StackPanel Margin="3">
        <GroupBox Margin="5" Header="按钮组 1">
            <StackPanel Margin="5">
                <RadioButton Content="Group 1" />
                <RadioButton Content="Group 1" />
                <RadioButton Content="Group 1" />
                <RadioButton Margin="0,10,0,0" GroupName="Group2">Group 2</RadioButton>
            </StackPanel>
        </GroupBox>

        <GroupBox Margin="5" Header="按钮组2">
            <StackPanel>
                <RadioButton>Group 3</RadioButton>
                <RadioButton>Group 3</RadioButton>
                <RadioButton>Group 3</RadioButton>
                <RadioButton Margin="0,10,0,0" GroupName="Group2">Group 2</RadioButton>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
