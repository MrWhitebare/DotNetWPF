<Window
    x:Class="Controls.Forms.GraphicalTabTitles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Controls.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GraphicalTabTitles"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <TabControl Margin="5">
        <TabItem>
            <TabItem.Header>
                <StackPanel>
                    <TextBlock Margin="3">Image and Text Tab Title</TextBlock>
                    <Image Source="../ReSource/IMG/happyface.jpg" Stretch="None" />
                </StackPanel>
            </TabItem.Header>
            <StackPanel Margin="3">
                <CheckBox Margin="3" Content="Setting One" />
                <CheckBox Margin="3" Content="Setting Two" />
                <CheckBox Margin="3" Content="Setting Three" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Tab Two" />
    </TabControl>
</Window>
