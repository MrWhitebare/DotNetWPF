<Window
    x:Class="Controls.Forms.GdiTextRendering"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Controls.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GdiTextRendering"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <StackPanel Margin="10">
        <TextBlock Margin="5" FontSize="12">
            This is a Test. Ideal text is blurry at small sizes.
        </TextBlock>

        <TextBlock
            Margin="5"
            FontSize="12"
            TextOptions.TextFormattingMode="Display">
            This is a Test. Display text is crisp at small sizes.
        </TextBlock>
    </StackPanel>
</Window>
