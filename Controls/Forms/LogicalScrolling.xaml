<Window
    x:Class="Controls.Forms.LogicalScrolling"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Controls.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LogicalScrolling"
    Width="319"
    Height="285"
    mc:Ignorable="d">
    <ScrollViewer CanContentScroll="True">
        <StackPanel>
            <Button Height="100" Content="1" />
            <Button Height="100" Content="2" />
            <Button Height="100" Content="3" />
            <Button Height="100" Content="4" />
        </StackPanel>
    </ScrollViewer>
</Window>
