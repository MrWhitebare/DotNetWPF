<Window
    x:Class="Controls.Forms.ComboBoxTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Controls.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ComboBoxTest"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <StackPanel>
        <ComboBox Margin="5">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="30"
                    Height="30"
                    Source="../Resource/IMG/happyface.jpg" />
                <Label VerticalContentAlignment="Center" Content="A happy face" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Image
                    Width="30"
                    Height="30"
                    Source="../Resource/IMG/redx.jpg" />
                <Label VerticalAlignment="Center" Content="A warning sign" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Image
                    Width="30"
                    Height="30"
                    Source="../Resource/IMG/happyface.jpg" />
                <Label VerticalContentAlignment="Center" Content="A happy face" />
            </StackPanel>
        </ComboBox>
    </StackPanel>
</Window>
