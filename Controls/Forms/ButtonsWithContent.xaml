<Window
    x:Class="Controls.Forms.ButtonsWithContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Controls.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ButtonsWithContent"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <StackPanel Margin="3">
        <Button Margin="3" Content="Text button" />

        <Button Margin="3">
            <Image Source="../Resource/IMG/happyface.jpg" Stretch="None" />
        </Button>

        <Button Margin="3">
            <StackPanel>
                <TextBlock Margin="3" TextAlignment="Center">Image and text button</TextBlock>
                <Image Source="../Resource/IMG/happyface.jpg" Stretch="None" />
                <TextBlock Margin="3" TextAlignment="Center">Courtesy of the StackPanel</TextBlock>
            </StackPanel>
        </Button>

        <Button
            Margin="3"
            Padding="3"
            HorizontalContentAlignment="Stretch">
            <StackPanel>
                <TextBlock Margin="3">Type something here:</TextBlock>
                <TextBox Margin="3" HorizontalAlignment="Stretch">Text box in a button</TextBox>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
