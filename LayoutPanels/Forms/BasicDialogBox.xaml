<Window
    x:Class="LayoutPanels.Forms.BasicDialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LayoutPanels.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BasicDialogBox"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            HorizontalAlignment="Right"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">
            <Button Margin="10,10,2,10" Padding="3,3,3,3">确定</Button>
            <Button Margin="2,10,10,10" Padding="3,3,3,3">取消</Button>
        </StackPanel>
        <TextBox Margin="10" DockPanel.Dock="Top">This is a test.</TextBox>
    </DockPanel>
</Window>
