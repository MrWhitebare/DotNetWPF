<Window
    x:Class="LayoutPanels.Forms.SimpleInkCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LayoutPanels.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SimpleInkCanvas"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="5"
            Orientation="Horizontal">
            <TextBlock Margin="5">EditingMode:</TextBlock>
            <ComboBox
                Name="cbxEditingMode"
                VerticalAlignment="Center"
                Text="请选中绘制模式" />
        </StackPanel>

        <InkCanvas
            Name="inkCanvas"
            Grid.Row="1"
            Background="LightYellow"
            EditingMode="{Binding ElementName=cbxEditingMode, Path=SelectedItem}">
            <Image
                Width="287"
                Height="319"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                InkCanvas.Left="10"
                InkCanvas.Top="10"
                Source="../Resource/office.jpg" />
        </InkCanvas>
    </Grid>
</Window>
