<Window x:Class="LayoutPanels.Forms.TheUniformGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutPanels.Forms"
        mc:Ignorable="d"
        Title="TheUniformGrid" Height="300" Width="300">
    <UniformGrid Rows="2" Columns="2">
        <Button Margin="10 10 5 5">Top Left</Button>
        <Button Margin="5 10 10 5">Top Right</Button>
        <Button Margin="10 5 5 10">Bottom Left</Button>
        <Button Margin="5 5 10 10">Bottom Right</Button>
    </UniformGrid>
</Window>
