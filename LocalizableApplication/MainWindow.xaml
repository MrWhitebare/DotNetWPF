<Window
    x:Class="LocalizableApplication.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LocalizableApplication"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    Title="MainWindow"
    Width="300"
    Height="300"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Window.Resources>
        <s:String x:Key="Error" x:Uid="s:String">Something bad happend</s:String>
    </Window.Resources>

    <StackPanel x:Uid="stackPannel" Margin="10">
        <TextBlock x:Uid="textBlockA" Margin="10">One line of text</TextBlock>
        <Button
            Name="btnDosomething"
            x:Uid="btnDosomething"
            Margin="10"
            Padding="3"
            Click="btnDosomething_Click"
            Content="A button" />
        <TextBlock x:Uid="textBlockB" Margin="10">One line of text</TextBlock>
    </StackPanel>
</Window>
