<Window
    x:Class="RoutedEvents.Forms.MousePosition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RoutedEvents.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MousePosition"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Rectangle
            Name="rect"
            Grid.Row="0"
            Fill="LightBlue"
            MouseMove="rect_MouseMove" />
        <Button
            Name="btnCapture"
            Grid.Row="1"
            Content="Capture the Mouse" Click="btnCapture_Click" />
        <TextBlock Name="tbxInfo" Grid.Row="2" />
    </Grid>
</Window>
