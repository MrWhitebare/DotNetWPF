<Window
    x:Class="RoutedEvents.Forms.OnlyNumbers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RoutedEvents.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OnlyNumbers"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="5" PreviewKeyDown="StackPanel_PreviewKeyDown" PreviewTextInput="StackPanel_PreviewTextInput">
            <TextBox Margin="3" AcceptsTab="False" />
            <TextBox Margin="3" />
            <TextBox Margin="3" />
        </StackPanel>
    </Grid>
</Window>
