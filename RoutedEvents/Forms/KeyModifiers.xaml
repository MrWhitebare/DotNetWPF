<Window
    x:Class="RoutedEvents.Forms.KeyModifiers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RoutedEvents.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="KeyModifiers"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <StackPanel Margin="5">
        <TextBox KeyDown="KeyEvent" />
        <TextBlock Name="lblInfo" />
        <Button Name="btnCheckShift" Content="Check Current Shift State" Click="btnCheckShift_Click" />
    </StackPanel>
</Window>
