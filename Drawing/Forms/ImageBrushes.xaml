<Window
    x:Class="Drawing.Forms.ImageBrushes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Drawing.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ImageBrushes"
    Width="419.6"
    Height="389.6"
    mc:Ignorable="d">
    <Canvas>
        <Rectangle
            Canvas.Left="10"
            Canvas.Top="10"
            Width="271"
            Height="100"
            Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush ImageSource="../Resources/Images/logo.gif" Stretch="None" />
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle
            Canvas.Left="10"
            Canvas.Top="120"
            Width="200"
            Height="200"
            Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush
                    ImageSource="../Resources/Images/logo.gif"
                    Stretch="Uniform"
                    Viewbox="0.4 0.5 0.2 0.2" />
            </Rectangle.Fill>
        </Rectangle>
    </Canvas>
</Window>
