<Window
    x:Class="Drawing.Forms.PixelSnapping"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Drawing.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PixelSnapping"
    Width="320"
    Height="142"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center"
            Text="Not Snapped:" />
        <Rectangle
            Grid.Row="0"
            Grid.Column="1"
            Height="10"
            Margin="10"
            Fill="Red"
            SnapsToDevicePixels="False" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Text="Snapped:" />
        <Rectangle
            Grid.Row="1"
            Grid.Column="1"
            Height="10"
            Margin="10"
            Fill="Red"
            SnapsToDevicePixels="True" />
    </Grid>
</Window>
