<Window
    x:Class="Styles.Forms.AutomaticStyles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Styles.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AutomaticStyles"
    Width="300"
    Height="300"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>

    <StackPanel Margin="5">
        <Button Content="Customized Button" />
        <TextBlock Margin="5" Text="Normal Content." />
        <Button
            Margin="5"
            Padding="5"
            Content="A Normal Button"
            Style="{x:Null}" />
        <TextBlock Margin="5" Text="More normal Content." />
        <Button Content="Another Customized Button" />
    </StackPanel>
</Window>
