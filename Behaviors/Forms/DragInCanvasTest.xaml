<Window
    x:Class="Behaviors.Forms.DragInCanvasTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customAction="clr-namespace:CustomBehaviorsLibrary;assembly=CustomBehaviorsLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:Behaviors.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DragInCanvasTest"
    Width="350"
    Height="525"
    mc:Ignorable="d">
    <Canvas>
        <Rectangle
            Canvas.Left="39"
            Canvas.Top="26"
            Width="40"
            Height="60"
            Fill="Yellow" />
        <Ellipse
            Canvas.Left="136"
            Canvas.Top="26"
            Width="80"
            Height="60"
            Fill="Blue">
            <i:Interaction.Behaviors>
                <customAction:DragInCanvasBehavior />
            </i:Interaction.Behaviors>
        </Ellipse>

        <Ellipse
            Canvas.Left="260"
            Canvas.Top="23"
            Width="40"
            Height="70"
            Fill="OrangeRed">
            <i:Interaction.Behaviors>
                <customAction:DragInCanvasBehavior />
            </i:Interaction.Behaviors>
        </Ellipse>
    </Canvas>
</Window>
